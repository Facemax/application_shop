<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="210dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/collapsing_toolbar"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Titles"
            app:contentScrim="@color/color_important">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="45dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linear1"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:background="@drawable/background_login_div"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="比价商品："
                            android:textSize="10dp"
                            android:textColor="@color/color_important"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_spname"
                            android:text="Apple 苹果 iPhone 6s Plus (A1699) 16G 深空灰色 移动联通电信4G手机"
                            android:textSize="10dp"
                            android:singleLine="true"
                            android:textIsSelectable="true"
                            android:textColor="@color/color_importantword"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="网购平台："
                            android:textSize="10dp"
                            android:textColor="@color/color_important"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_sitename"
                            android:text="苏宁易购"
                            android:textSize="10dp"
                            android:singleLine="true"
                            android:textIsSelectable="true"
                            android:textColor="@color/color_importantword"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否自营："
                            android:textSize="10dp"
                            android:textColor="@color/color_important"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10dp"
                            android:singleLine="true"
                            android:textIsSelectable="true"
                            android:textColor="@color/color_importantword"
                            android:id="@+id/tv_ziying"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品分类："
                            android:textSize="10dp"
                            android:textColor="@color/color_important"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_classname"
                            android:text="手机"
                            android:textSize="10dp"
                            android:singleLine="true"
                            android:textIsSelectable="true"
                            android:textColor="@color/color_importantword"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品品牌："
                            android:textSize="10dp"
                            android:textColor="@color/color_important"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_brandName"
                            android:text="苹果"
                            android:textSize="10dp"
                            android:singleLine="true"
                            android:textIsSelectable="true"
                            android:textColor="@color/color_importantword"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品价格："
                            android:textSize="10dp"
                            android:textColor="@color/color_important"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_spprice"
                            android:text="5999"
                            android:textSize="10dp"
                            android:singleLine="true"
                            android:textIsSelectable="true"
                            android:textColor="@color/color_importantword"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="-11dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购买链接："
                            android:textSize="10dp"
                            android:layout_gravity="center"
                            android:textColor="@color/color_important"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_spurl"
                            android:layout_gravity="center"
                            android:text="http://www.newegg.cn/Product/A1R-184-014.htm"
                            android:textSize="10dp"
                            android:singleLine="true"
                            android:textIsSelectable="true"
                            android:textColor="@color/color_importantword"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>



        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <WebView
                android:layout_below="@+id/linear_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webview">

            </WebView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_collect"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|end"
        android:src="@drawable/collect_web"/>
</android.support.design.widget.CoordinatorLayout>